{
  "id": "{{AGENT_ID}}",
  "name": "{{AGENT_NAME}}",
  "description": "{{AGENT_DESCRIPTION}}",
  "version": "1.0",

  "expertise": {
    "domains": ["analysis", "assessment", "decision-support"],
    "capabilities": ["evaluation", "risk-assessment", "recommendation"]
  },

  "mcp_servers": {{MCP_SERVERS}},

  "context_buckets": {
    "assigned": {{CONTEXT_BUCKETS}},
    "access_level": "read-only"
  },

  "output": {
    "folder": "{{OUTPUT_FOLDER}}",
    "formats": ["markdown"],
    "briefing_folder": "{{BRIEFING_FOLDER}}"
  },

  "collaboration": {
    "can_request_from": {{CAN_REQUEST_FROM}},
    "provides_to": {{PROVIDES_TO}},
    "handoff_format": "structured-summary"
  },

  "trigger": {
    "type": "on-demand",
    "description": "Invoked when analysis or assessment is needed"
  }
}
