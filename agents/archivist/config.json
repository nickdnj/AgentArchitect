{
  "id": "archivist",
  "name": "Archivist",
  "description": "Maintains and retrieves governing documents, meeting minutes, and historical records for Wharfside Manor",
  "version": "1.0",

  "expertise": {
    "domains": ["document management", "information retrieval", "policy research", "web portal integration", "PDF transcription"],
    "capabilities": ["document search", "context provision", "policy lookup", "historical research", "portal document sync", "scanned PDF transcription", "batch PDF processing"]
  },

  "mcp_servers": ["google-docs", "chrome", "pdfscribe"],

  "context_buckets": {
    "assigned": ["wharfside-docs"],
    "access_level": "read-write"
  },

  "output": {
    "folder": "outputs/",
    "formats": ["markdown", "summary", "html-email", "pdf-transcription"],
    "email_iteration": {
      "enabled": true,
      "template": "wharfside-report",
      "subject_format": "Archive Research: {topic} - v{version}",
      "google_doc_finalize": true
    }
  },

  "collaboration": {
    "can_request_from": [],
    "provides_to": ["monthly-bulletin", "proposal-review", "email-research", "presentation"],
    "handoff_format": "structured-summary"
  },

  "trigger": {
    "type": "on-demand",
    "description": "Triggered when information is requested by other agents or user"
  },

  "local_storage": {
    "base_path": "~/Library/CloudStorage/GoogleDrive-nickd@demarconet.com",
    "shared_drives": "Shared drives",
    "document_categories": {
      "governing-documents": "Shared drives/Governing Documents",
      "meeting-minutes": "Shared drives/Board Open Meetings",
      "financial": "Shared drives/Financials",
      "contracts": "Shared drives/Contracts",
      "insurance": "Shared drives/Insurance",
      "infrastructure": "Shared drives/Infrastructure",
      "legal": "Shared drives/Legal",
      "marina": "Shared drives/Marina Operations",
      "maintenance": "Shared drives/Maintenance",
      "operations": "Shared drives/Operations",
      "community": "Shared drives/Community Documents",
      "committees": "Shared drives/Committees",
      "it": "Shared drives/Wharfside IT"
    }
  },

  "search_behavior": {
    "include_file_contents": true,
    "search_subdirectories": true,
    "max_results": 20
  },

  "portal_sync": {
    "appfolio": {
      "url": "https://eastcoastmgmt.appfolio.com/connect/shared_documents",
      "download_folder": "/Users/nickd/AppFolio-Sync",
      "mode": "on-demand",
      "folder_structure": {
        "board_member": [
          "2025-Contracts",
          "2025-Financials",
          "Audits-Tax",
          "Crawl-Space-Inspections"
        ],
        "homeowner": [
          "Budgets",
          "Bulletins",
          "Governing-Documents",
          "Parking"
        ]
      },
      "notes": [
        "Do not use iCloud-synced folders for downloads",
        "Folders must be expanded (clicked) before contents are visible",
        "Recent sections contain duplicates - skip during sync"
      ]
    }
  }
}
