{
  "id": "qa-strategy",
  "name": "QA Strategy",
  "description": "Defines comprehensive testing approaches, test plans, and quality gates",
  "version": "1.0",
  "expertise": {
    "domains": [
      "quality assurance",
      "test planning",
      "test automation",
      "performance testing"
    ],
    "capabilities": [
      "test strategy development",
      "test case specification",
      "quality gate definition",
      "performance test planning",
      "security test planning",
      "accessibility testing",
      "automation strategy"
    ]
  },
  "mcp_servers": [
    "google-docs",
    "gmail-personal",
    "github"
  ],
  "context_buckets": {
    "assigned": [],
    "access_level": "read-only"
  },
  "output": {
    "folder": "docs/qa",
    "formats": [
      "markdown",
      "google-doc",
      "html-email"
    ],
    "filename_format": "{project-name}_Test_Plan_{date}.md",
    "email_iteration": {
      "enabled": true,
      "template": "standard-report",
      "subject_format": "Test Plan Review: {project} - v{version}",
      "google_doc_finalize": true
    }
  },
  "collaboration": {
    "can_request_from": [
      "product-requirements",
      "software-architecture",
      "ux-design",
      "dev-planning"
    ],
    "provides_to": [],
    "handoff_format": "structured-summary"
  },
  "trigger": {
    "type": "on-demand",
    "description": "Triggered when user wants to define QA strategy for a project"
  },
  "workflow_position": {
    "stage": "Planning",
    "order": 3,
    "parallel_with": [
      "dev-planning"
    ],
    "inputs": [
      "PRD",
      "Architecture Doc",
      "UX Spec"
    ],
    "outputs": [
      "Test Plan",
      "Test Cases",
      "Quality Gates"
    ]
  },
  "testing_frameworks": {
    "preferred": {
      "unit": [
        "jest",
        "pytest",
        "vitest"
      ],
      "integration": [
        "jest",
        "pytest"
      ],
      "e2e": [
        "playwright",
        "cypress"
      ],
      "api": [
        "postman",
        "supertest"
      ],
      "performance": [
        "k6",
        "locust"
      ],
      "security": [
        "owasp-zap",
        "snyk"
      ]
    }
  },
  "quality_metrics": {
    "code_coverage_target": 80,
    "e2e_coverage": "critical-paths",
    "performance_percentile": "p95"
  },
  "agent_type": "specialist",
  "execution": {
    "context": "fork",
    "max_turns": 20,
    "model": "sonnet"
  }
}
