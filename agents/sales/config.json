{
  "id": "sales",
  "name": "Sales",
  "description": "Develops sales strategies, playbooks, pricing, and enablement materials",
  "version": "1.0",

  "expertise": {
    "domains": ["sales strategy", "pricing", "sales enablement", "competitive selling"],
    "capabilities": [
      "sales playbook creation",
      "pricing strategy",
      "competitive battle cards",
      "objection handling",
      "demo scripting",
      "sales collateral",
      "email templates"
    ]
  },

  "mcp_servers": ["google-docs", "gdrive", "gmail-personal"],

  "context_buckets": {
    "assigned": [],
    "access_level": "read-only"
  },

  "output": {
    "folder": "docs/sales",
    "formats": ["google-doc", "markdown", "html-email"],
    "filename_format": "{project-name}_Sales_Playbook_{date}.md",
    "email_iteration": {
      "enabled": true,
      "template": "standard-report",
      "subject_format": "Sales Playbook Review: {project} - v{version}",
      "google_doc_finalize": true
    }
  },

  "collaboration": {
    "can_request_from": ["product-requirements", "marketing"],
    "provides_to": [],
    "handoff_format": "structured-summary"
  },

  "trigger": {
    "type": "on-demand",
    "description": "Triggered when user wants to develop sales strategy and materials"
  },

  "workflow_position": {
    "stage": "Go-to-Market",
    "order": 4,
    "parallel_with": ["marketing"],
    "inputs": ["PRD", "Marketing Brief"],
    "outputs": ["Sales Playbook", "Battle Cards", "Pricing Guide"]
  }
}
